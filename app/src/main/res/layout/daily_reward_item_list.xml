<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/prize_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:id="@+id/prize_ic"
            android:src="@drawable/daily_reward_active" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/prize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1K"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/comic_sans_ms"
            android:textColor="@color/title_color"
            app:fontFamily="@font/comic_sans_ms" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAY 1"
        android:fontFamily="@font/comic_sans_ms"
        android:textColor="@color/white"
        app:fontFamily="@font/comic_sans_ms"
        app:layout_constraintTop_toBottomOf="@id/prize_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>